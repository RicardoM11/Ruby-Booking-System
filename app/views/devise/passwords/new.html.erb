<div class="container">
  <div class="py-5 my-5">
    <div class="row">
      <div class="col-lg-7 d-none d-lg-flex align-items-center justify-content-center">
        <div>
        </div>
      </div>

      <div class="col-12 col-lg-5 d-flex align-items-center justify-content-end">
        <div class="w-100">
          <h1 class="fw-bold"><%= t('auth.forgot_your_password') %></h1>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="input-group-lg field mb-3">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-4">
              <%= f.submit t('auth.forgot_your_password_button'), class: "btn btn-lg bg-primary text-light w-100 mt-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
