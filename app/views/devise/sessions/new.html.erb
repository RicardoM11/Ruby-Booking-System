<div class="container">
  <div class="py-5 my-5">
    <div class="row">
      <div class="col-lg-7 d-none d-lg-flex align-items-center justify-content-center">
        <div>
        </div>
      </div>

      <div class="col-12 col-lg-5 d-flex align-items-center justify-content-end">
        <div class="w-100">
          <h1 class="fw-bold"><%= t('auth.sign_in') %></h1>

          <p class="mb-4 text-muted"><%= t('auth.sign_in_description') %></p>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="input-group-lg field mb-3">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="input-group-lg field mb-3">
              <%= f.label :password, class: "form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field mb-3">
                <div class="d-flex flex-row">
                  <div class="form-check">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <%= f.label :remember_me, class: "form-check-label" %>
                  </div>

                  <div class="ms-auto">
                    <%= link_to t('auth.forget'), new_password_path(resource_name) %>
                  </div>
                </div>
              </div>
            <% end %>

            <div class="mb-4">
              <%= f.submit t('auth.sign_in_button'), class: "btn btn-lg bg-secondary text-light w-100 mt-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
